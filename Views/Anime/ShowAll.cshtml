
@{
    ViewBag.Title = "ShowAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
@using FDMSWeb.Models
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <style>
        .img-thumbnail {
            padding: 0 !important;
            background-color: #fff;
            border: 1px solid #fff;
            border-radius: .25rem;
            max-width: 100%;
            height: auto;
            width: 221px;
            height: 310px;
            max-height: 100%;
            max-width: 100%;
        }

        .card {
            margin: 3%;
        }

        .card-body {
            padding: 0.5rem;
            text-align: center;
        }

        .card-footer {
            text-align: center;
        }

        .showall {
            text-align: center;
        }
    </style>
    <title>Wibu Anime List</title>
</head>
<body class="container">
    <div class=""><p></div>
    <div class="row mb-3 ">

        @if (@ViewBag.listAnime != null && @ViewBag.listAnime.Count != 0)
        {

            foreach (FDMSWeb.Models.Anime anime in ViewBag.listAnime)
            {
                <div class="col-md-3">
                    <div class="card " style="" title="">
                        <a href="Anime/ViewAnime/@anime.Id">
                            <div class="card-body">
                                <img class="img-thumbnail" src="~/Content/Images/Posters/@anime.Poster">
                            </div>

                            <div class="card-footer" title="">
                                @if (anime.Name.Length > 25)
                                {
                                    <span>@anime.Name.Substring(0, 25)...</span>
                                }
                                else
                                {
                                    @anime.Name
                                }
                            </div>
                        </a>
                    </div>
                </div>

            }
        }
    </div>
   
</body>
</html>